<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_song_id_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            tools:text="0"
            android:visibility="visible"

            android:layout_marginRight="@dimen/margin_right_for_id"
            />

        <TextView
            android:paddingLeft="@dimen/padding_left_title_song"
            android:paddingRight="@dimen/padding_right_title_song"
            android:id="@+id/text_view_song_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="@dimen/text_size"
            android:textAlignment="gravity"
            tools:text="Text for test"/>

    </LinearLayout>


</RelativeLayout>